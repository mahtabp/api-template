{
  "name": "my-api-template",
  "version": "1.0.0",
  "description": "a simple boilerplate for APIs",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "test": "NODE_ENV=test mocha --require ts-node/register tests/**/*.ts --colors --exit",
    "start": "ts-node src/server.ts",
    "dev": "nodemon ./src/server.ts localhost 8085",
    "new:migration": "knex migrate:make $name -x ts",
    "migrate": "knex migrate:latest --env development",
    "rollback": "knex migrate:rollback"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "convict": "^5.0.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "install": "^0.13.0",
    "js-yaml": "^3.13.1",
    "knex": "^0.19.0",
    "lodash": "^4.17.19",
    "mysql": "^2.17.1",
    "npm": "^6.10.0",
    "pg": "^7.11.0",
    "swagger-ui-express": "^4.0.6",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/convict": "^4.2.1",
    "@types/express": "^4.17.0",
    "@types/js-yaml": "^3.12.1",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.135",
    "@types/mocha": "^5.2.7",
    "@types/supertest": "^2.0.7",
    "@types/swagger-ui-express": "^3.0.1",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  }
}
